        Public Sub ActualizarTitulo()
            Me.ActualizarTituloVentanaPrincipal(Recursos.Etiquetas.fac_titleConsultarSociedades, Recursos.Ids.fac_ConsultarSociedad)
        End Sub

        ''' <summary>
        ''' Método que carga los datos iniciales a mostrar en la página
        ''' </summary>
        Public Sub CargarPagina()
            Mouse.OverrideCursor = Cursors.Wait

            Try
                '#Region "trace"
                If ConfigurationManager.AppSettings("ambiente").ToString().Equals("desarrollo") Then
                    logger.Debug("Entrando al metodo {0}", (New System.Diagnostics.StackFrame()).GetMethod().Name)
                End If
                '#End Region

                ActualizarTitulo()

                Me._Sociedades = Me._SociedadServicios.ConsultarTodos()
                Me._ventana.Count = Me._Sociedades.Count
                Me._ventana.Resultados = Me._Sociedades
                Me._ventana.SociedadFiltrar = New Sociedad()
                Me._ventana.FocoPredeterminado()

                '#Region "trace"
                If ConfigurationManager.AppSettings("ambiente").ToString().Equals("desarrollo") Then
                    logger.Debug("Saliendo del metodo {0}", (New System.Diagnostics.StackFrame()).GetMethod().Name)
                    '#End Region
                End If
            Catch ex As ApplicationException
                logger.[Error](ex.Message)
                Me.Navegar(ex.Message, True)
            Catch ex As RemotingException
                logger.[Error](ex.Message)
                Me.Navegar(Recursos.MensajesConElUsuario.ErrorRemoting, True)
            Catch ex As SocketException
                logger.[Error](ex.Message)
                Me.Navegar(Recursos.MensajesConElUsuario.ErrorConexionServidor, True)
            Catch ex As Exception
                logger.[Error](ex.Message)
                Me.Navegar(Recursos.MensajesConElUsuario.ErrorInesperado, True)
            Finally
                Mouse.OverrideCursor = Nothing
            End Try
        End Sub

        ''' <summary>
        ''' Método que realiza una consulta al servicio, con el fin de filtrar los datos que se muestran 
        ''' por pantalla
        ''' </summary>
        Public Sub Consultar()
            Try
                '#Region "trace"
                If ConfigurationManager.AppSettings("ambiente").ToString().Equals("desarrollo") Then
                    logger.Debug("Entrando al metodo {0}", (New System.Diagnostics.StackFrame()).GetMethod().Name)
                End If
                '#End Region

                Dim Sociedad As Sociedad = DirectCast(Me._ventana.SociedadFiltrar, Sociedad)
                'Sociedad.Region = If(Not Me._ventana.Region.Equals(""), Me._ventana.Region, Nothing)
                'Sociedad.Id = Nothing
                Dim SociedadsFiltrados As IEnumerable(Of Sociedad) = Me._Sociedades


                If Not String.IsNullOrEmpty(Sociedad.Id) Then
                    SociedadsFiltrados = From p In SociedadsFiltrados Where p.Id = Integer.Parse(Sociedad.Id)
                    'Where p.Id IsNotnull Nothing AndAlso p.Id.ToLower().Contains(Sociedad.Id.ToLower())
                End If

                If Not String.IsNullOrEmpty(Sociedad.Xsociedad) Then
                    SociedadsFiltrados = From p In SociedadsFiltrados Where p.Xsociedad IsNot Nothing AndAlso p.Xsociedad.ToLower().Contains(Sociedad.Xsociedad.ToLower())
                End If

                Me._ventana.Count = SociedadsFiltrados.ToList().Count
                Me._ventana.Resultados = SociedadsFiltrados.ToList()
                'Me._ventana.Resultados = SociedadsFiltrados.ToList(IEnumerable(Of Sociedad))

                '#Region "trace"
                If ConfigurationManager.AppSettings("ambiente").ToString().Equals("desarrollo") Then
                    logger.Debug("Saliendo del metodo {0}", (New System.Diagnostics.StackFrame()).GetMethod().Name)
                    '#End Region
                End If
            Catch ex As Exception
                logger.[Error](ex.Message)
                Me.Navegar(Recursos.MensajesConElUsuario.ErrorInesperado, True)
            End Try
        End Sub

