        Public Sub ActualizarTitulo()
            Me.ActualizarTituloVentanaPrincipal(Recursos.Etiquetas.fac_titleConsultarGuias, Recursos.Ids.fac_ConsultarGuia)
        End Sub

        ''' <summary>
        ''' Método que carga los datos iniciales a mostrar en la página
        ''' </summary>
        Public Sub CargarPagina()
            Mouse.OverrideCursor = Cursors.Wait

            Try
                '#Region "trace"
                If ConfigurationManager.AppSettings("ambiente").ToString().Equals("desarrollo") Then
                    logger.Debug("Entrando al metodo {0}", (New System.Diagnostics.StackFrame()).GetMethod().Name)
                End If
                '#End Region

                ActualizarTitulo()

                Me._Guias = Me._GuiaServicios.ConsultarTodos()
                Me._ventana.Count = Me._Guias.Count
                Me._ventana.Resultados = Me._Guias
                Me._ventana.GuiaFiltrar = New Guia()
                Me._ventana.FocoPredeterminado()

                '#Region "trace"
                If ConfigurationManager.AppSettings("ambiente").ToString().Equals("desarrollo") Then
                    logger.Debug("Saliendo del metodo {0}", (New System.Diagnostics.StackFrame()).GetMethod().Name)
                    '#End Region
                End If
            Catch ex As ApplicationException
                logger.[Error](ex.Message)
                Me.Navegar(ex.Message, True)
            Catch ex As RemotingException
                logger.[Error](ex.Message)
                Me.Navegar(Recursos.MensajesConElUsuario.ErrorRemoting, True)
            Catch ex As SocketException
                logger.[Error](ex.Message)
                Me.Navegar(Recursos.MensajesConElUsuario.ErrorConexionServidor, True)
            Catch ex As Exception
                logger.[Error](ex.Message)
                Me.Navegar(Recursos.MensajesConElUsuario.ErrorInesperado, True)
            Finally
                Mouse.OverrideCursor = Nothing
            End Try
        End Sub

        ''' <summary>
        ''' Método que realiza una consulta al servicio, con el fin de filtrar los datos que se muestran 
        ''' por pantalla
        ''' </summary>
        Public Sub Consultar()
            Try
                '#Region "trace"
                If ConfigurationManager.AppSettings("ambiente").ToString().Equals("desarrollo") Then
                    logger.Debug("Entrando al metodo {0}", (New System.Diagnostics.StackFrame()).GetMethod().Name)
                End If
                '#End Region

                Dim Guia As Guia = DirectCast(Me._ventana.GuiaFiltrar, Guia)
                'Guia.Region = If(Not Me._ventana.Region.Equals(""), Me._ventana.Region, Nothing)
                'Guia.Id = Nothing
                Dim GuiasFiltrados As IEnumerable(Of Guia) = Me._Guias

                If Not String.IsNullOrEmpty(Guia.Id) Then
                    GuiasFiltrados = From p In GuiasFiltrados Where p.Id IsNot Nothing AndAlso p.Id.ToLower().Contains(Guia.Id.ToLower())
                End If

                If Not String.IsNullOrEmpty(Guia.Des_guia) Then
                    GuiasFiltrados = From p In GuiasFiltrados Where p.Des_guia IsNot Nothing AndAlso p.Des_guia.ToLower().Contains(Guia.Des_guia.ToLower())
                End If

                If Not String.IsNullOrEmpty(Guia.Fec_guia) Then
                    GuiasFiltrados = From p In GuiasFiltrados
                    'Where p.Fec_guia IsNot Nothing AndAlso p.Fec_guia.ToLower().Contains(Guia.Fec_guia.ToLower())
                End If

                Me._ventana.Count = GuiasFiltrados.ToList().Count
                Me._ventana.Resultados = GuiasFiltrados.ToList()
                'Me._ventana.Resultados = GuiasFiltrados.ToList(IEnumerable(Of Guia))

                '#Region "trace"
                If ConfigurationManager.AppSettings("ambiente").ToString().Equals("desarrollo") Then
                    logger.Debug("Saliendo del metodo {0}", (New System.Diagnostics.StackFrame()).GetMethod().Name)
                    '#End Region
                End If
            Catch ex As Exception
                logger.[Error](ex.Message)
                Me.Navegar(Recursos.MensajesConElUsuario.ErrorInesperado, True)
            End Try
        End Sub

