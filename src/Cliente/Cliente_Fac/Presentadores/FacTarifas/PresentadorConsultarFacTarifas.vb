                logger.Debug("Entrando al metodo {0}", (New System.Diagnostics.StackFrame()).GetMethod().Name)
            End If
            '#End Region

            Me.Navegar(New ConsultarFacTarifas())
            'Me.Navegar(New ConsultarFacCobro())
            '#Region "trace"
            If ConfigurationManager.AppSettings("ambiente").ToString().Equals("desarrollo") Then
                logger.Debug("Saliendo del metodo {0}", (New System.Diagnostics.StackFrame()).GetMethod().Name)
            End If
            '#End Region
        End Sub

        Public Sub ActualizarTitulo()
            Me.ActualizarTituloVentanaPrincipal(Recursos.Etiquetas.fac_titleConsultarFacTarifas, Recursos.Ids.fac_ConsultarFacTarifa)
        End Sub

        ''' <summary>
        ''' Método que carga los datos iniciales a mostrar en la página
        ''' </summary>
        Public Sub CargarPagina()
            Mouse.OverrideCursor = Cursors.Wait

            Try
                '#Region "trace"
                If ConfigurationManager.AppSettings("ambiente").ToString().Equals("desarrollo") Then
                    logger.Debug("Entrando al metodo {0}", (New System.Diagnostics.StackFrame()).GetMethod().Name)
                End If
                '#End Region

                ActualizarTitulo()

                Me._FacTarifas = Me._FacTarifaServicios.ConsultarTodos()
                Me._ventana.Count = Me._FacTarifas.Count
                Me._ventana.Resultados = Me._FacTarifas
                Me._ventana.FacTarifaFiltrar = New FacTarifa()
                Me._ventana.FocoPredeterminado()

                '#Region "trace"
                If ConfigurationManager.AppSettings("ambiente").ToString().Equals("desarrollo") Then
                    logger.Debug("Saliendo del metodo {0}", (New System.Diagnostics.StackFrame()).GetMethod().Name)
                    '#End Region
                End If
            Catch ex As ApplicationException
                logger.[Error](ex.Message)
                Me.Navegar(ex.Message, True)
            Catch ex As RemotingException
                logger.[Error](ex.Message)
                Me.Navegar(Recursos.MensajesConElUsuario.ErrorRemoting, True)
            Catch ex As SocketException
                logger.[Error](ex.Message)
                Me.Navegar(Recursos.MensajesConElUsuario.ErrorConexionServidor, True)
            Catch ex As Exception
                logger.[Error](ex.Message)
                Me.Navegar(Recursos.MensajesConElUsuario.ErrorInesperado, True)
            Finally
                Mouse.OverrideCursor = Nothing
            End Try
        End Sub

        ''' <summary>
        ''' Método que realiza una consulta al servicio, con el fin de filtrar los datos que se muestran 
        ''' por pantalla
        ''' </summary>
        Public Sub Consultar()
            Try
                '#Region "trace"
                If ConfigurationManager.AppSettings("ambiente").ToString().Equals("desarrollo") Then
                    logger.Debug("Entrando al metodo {0}", (New System.Diagnostics.StackFrame()).GetMethod().Name)
                End If
                '#End Region

                Dim FacTarifa As FacTarifa = DirectCast(Me._ventana.FacTarifaFiltrar, FacTarifa)
                'FacTarifa.Region = If(Not Me._ventana.Region.Equals(""), Me._ventana.Region, Nothing)
                'FacTarifa.Id = Nothing
                Dim FacTarifasFiltrados As IEnumerable(Of FacTarifa) = Me._FacTarifas


                If Not String.IsNullOrEmpty(FacTarifa.Id) Then
                    FacTarifasFiltrados = From p In FacTarifasFiltrados Where p.Id = Integer.Parse(FacTarifa.Id)
                    'Where p.Id IsNot Nothing AndAlso p.Id.ToLower().Contains(FacTarifa.Id.ToLower())
                End If

                If Not String.IsNullOrEmpty(FacTarifa.Descripcion) Then
                    FacTarifasFiltrados = From p In FacTarifasFiltrados Where p.Descripcion IsNot Nothing AndAlso p.Descripcion.ToLower().Contains(FacTarifa.Descripcion.ToLower())
                End If

                Me._ventana.Count = FacTarifasFiltrados.ToList().Count
                If FacTarifasFiltrados.ToList().Count <= 0 Then
                    MessageBox.Show("Mensaje: No se encontraron registros")
                End If
                Me._ventana.Resultados = FacTarifasFiltrados.ToList()
                'Me._ventana.Resultados = FacTarifasFiltrados.ToList(IEnumerable(Of FacTarifa))

                '#Region "trace"
                If ConfigurationManager.AppSettings("ambiente").ToString().Equals("desarrollo") Then
                    logger.Debug("Saliendo del metodo {0}", (New System.Diagnostics.StackFrame()).GetMethod().Name)
                    '#End Region
                End If
            Catch ex As Exception
                logger.[Error](ex.Message)
                Me.Navegar(Recursos.MensajesConElUsuario.ErrorInesperado, True)
            End Try
        End Sub

