        Public Sub ActualizarTitulo()
            Me.ActualizarTituloVentanaPrincipal(Recursos.Etiquetas.fac_titleConsultarMateriales, Recursos.Ids.fac_ConsultarMaterial)
        End Sub

        ''' <summary>
        ''' Método que carga los datos iniciales a mostrar en la página
        ''' </summary>
        Public Sub CargarPagina()
            Mouse.OverrideCursor = Cursors.Wait

            Try
                '#Region "trace"
                If ConfigurationManager.AppSettings("ambiente").ToString().Equals("desarrollo") Then
                    logger.Debug("Entrando al metodo {0}", (New System.Diagnostics.StackFrame()).GetMethod().Name)
                End If
                '#End Region

                ActualizarTitulo()

                Me._Materiales = Me._MaterialServicios.ConsultarTodos()
                Me._ventana.Count = Me._Materiales.Count
                Me._ventana.Resultados = Me._Materiales
                Me._ventana.MaterialFiltrar = New Material()
                Me._ventana.FocoPredeterminado()

                '#Region "trace"
                If ConfigurationManager.AppSettings("ambiente").ToString().Equals("desarrollo") Then
                    logger.Debug("Saliendo del metodo {0}", (New System.Diagnostics.StackFrame()).GetMethod().Name)
                    '#End Region
                End If
            Catch ex As ApplicationException
                logger.[Error](ex.Message)
                Me.Navegar(ex.Message, True)
            Catch ex As RemotingException
                logger.[Error](ex.Message)
                Me.Navegar(Recursos.MensajesConElUsuario.ErrorRemoting, True)
            Catch ex As SocketException
                logger.[Error](ex.Message)
                Me.Navegar(Recursos.MensajesConElUsuario.ErrorConexionServidor, True)
            Catch ex As Exception
                logger.[Error](ex.Message)
                Me.Navegar(Recursos.MensajesConElUsuario.ErrorInesperado, True)
            Finally
                Mouse.OverrideCursor = Nothing
            End Try
        End Sub

        ''' <summary>
        ''' Método que realiza una consulta al servicio, con el fin de filtrar los datos que se muestran 
        ''' por pantalla
        ''' </summary>
        Public Sub Consultar()
            Try
                '#Region "trace"
                If ConfigurationManager.AppSettings("ambiente").ToString().Equals("desarrollo") Then
                    logger.Debug("Entrando al metodo {0}", (New System.Diagnostics.StackFrame()).GetMethod().Name)
                End If
                '#End Region

                Dim Material As Material = DirectCast(Me._ventana.MaterialFiltrar, Material)
                'Material.Region = If(Not Me._ventana.Region.Equals(""), Me._ventana.Region, Nothing)
                'Material.Id = Nothing
                Dim MaterialsFiltrados As IEnumerable(Of Material) = Me._Materiales


                If Not String.IsNullOrEmpty(Material.Id) Then
                    MaterialsFiltrados = From p In MaterialsFiltrados Where p.Id IsNot Nothing AndAlso p.Id.ToLower().Contains(Material.Id.ToLower())
                End If

                If Not String.IsNullOrEmpty(Material.Doc_esp) Then
                    MaterialsFiltrados = From p In MaterialsFiltrados Where p.Doc_esp IsNot Nothing AndAlso p.Doc_esp.ToLower().Contains(Material.Doc_esp.ToLower())
                End If

                If Not String.IsNullOrEmpty(Material.Doc_ingl) Then
                    MaterialsFiltrados = From p In MaterialsFiltrados Where p.Doc_ingl IsNot Nothing AndAlso p.Doc_ingl.ToLower().Contains(Material.Doc_ingl.ToLower())
                End If

                Me._ventana.Count = MaterialsFiltrados.ToList().Count
                If MaterialsFiltrados.ToList().Count <= 0 Then
                    MessageBox.Show("Mensaje: No se encontraron registros")
                End If
                Me._ventana.Resultados = MaterialsFiltrados.ToList()
                'Me._ventana.Resultados = MaterialsFiltrados.ToList(IEnumerable(Of Material))

                '#Region "trace"
                If ConfigurationManager.AppSettings("ambiente").ToString().Equals("desarrollo") Then
                    logger.Debug("Saliendo del metodo {0}", (New System.Diagnostics.StackFrame()).GetMethod().Name)
                    '#End Region
                End If
            Catch ex As Exception
                logger.[Error](ex.Message)
                Me.Navegar(Recursos.MensajesConElUsuario.ErrorInesperado, True)
            End Try
        End Sub

