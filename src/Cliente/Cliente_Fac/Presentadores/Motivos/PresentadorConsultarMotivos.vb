        ''' <summary>
        ''' Constructor Predeterminado
        ''' </summary>
        ''' <param name="ventana">página que satisface el contrato</param>
        Public Sub New(ByVal ventana As IConsultarMotivos)
            Try                
                Me._ventana = ventana
                Me._MotivoServicios = DirectCast(Activator.GetObject(GetType(IMotivoServicios), ConfigurationManager.AppSettings("RutaServidor") + ConfigurationManager.AppSettings("MotivoServicios")), IMotivoServicios)
            Catch ex As Exception
                logger.[Error](ex.Message)
                Me.Navegar(Recursos.MensajesConElUsuario.ErrorInesperado, True)
            End Try
        End Sub
        Public Sub Limpiar()
