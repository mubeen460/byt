                    </StackPanel>
                    <Separator Margin="0,5,0,5"/>
                    <CheckBox IsEnabled="True" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="7" Content="{x:Static recurso:Etiquetas.chkBoletines}" 
