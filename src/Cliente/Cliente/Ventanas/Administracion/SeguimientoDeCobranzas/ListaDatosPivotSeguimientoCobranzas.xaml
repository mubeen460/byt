                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Header="SALDO" 
                                                Binding="{Binding Path=SALDO, StringFormat= {}{0:N}, ConverterCulture=de-DE}" 
