<Page x:Class="Trascend.Bolet.Cliente.Ventanas.Patentes.ConsultarPatentes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="1690" d:DesignWidth="800"
      xmlns:recurso="clr-namespace:Trascend.Bolet.Cliente.Recursos"
      xmlns:conv="clr-namespace:Trascend.Bolet.Cliente.Transformadores"
      xmlns:custom="clr-namespace:Trascend.Bolet.ControlesByT;assembly=ControlesByT"
	Title="{x:Static recurso:Etiquetas.titleConsultarPoderes}" Loaded="Page_Loaded" KeyDown="Page_KeyDown">
    <Page.Resources>
        <conv:DosValresAUno x:Key="convertirADosValores"></conv:DosValresAUno>
        <conv:EnteroMinimoABlanco x:Key="convertir"></conv:EnteroMinimoABlanco>
        <Style TargetType="{x:Type DatePickerTextBox}">
            <Setter Property="Text" Value="{x:Static recurso:Etiquetas.dpkText}" />
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="460"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>






        <GroupBox Grid.Column="0" Grid.Row="0" Margin="5,5,30,5" Height="35" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Label>
                    <TextBlock FontSize="15" Text="{x:Static recurso:Etiquetas.lblTotalHits}"/>
                </Label>
                <Label>
                    <TextBlock FontSize="15" Name="_lblHits"/>
                </Label>

            </StackPanel>
        </GroupBox>

        <ScrollViewer HorizontalScrollBarVisibility="Auto">
            <!--Área de Filtrado-->
            <GroupBox Grid.Column="0" Grid.Row="0" Margin="5,45,5,5">
                <StackPanel Name="_splFiltro" DataContext="{Binding}" VerticalAlignment="Center">
                    <Separator Margin="0,0,0,5"/>

                    <!--Patente-->
                    <StackPanel Name="_nacional">


                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">
                            <Label  Name="_lblTipoBusqueda" >
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblLocalidad}"/>
                            </Label>
                            <ComboBox SelectionChanged="_cbxTipoBusqueda_SelectionChanged" Name="_cbxTipoBusqueda" Width="150" ItemsSource="{Binding}" DisplayMemberPath="Descripcion" >
                            </ComboBox>
                        </WrapPanel>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">
                            <Label Name="_lblId">
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblId}"/>
                            </Label>
                            <custom:ByTTextBox Name="_txtId" Width="150" MaxLength="40" SoloNumero="True" Filtro="True" 
                                       GotFocus="_btnConsultarFocus" GotKeyboardFocus="_btnConsultarFocus" TamanoMaximo="8"/>
                        </WrapPanel>

                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">
                            <Label Name="_lblOrigenPatente">
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblOrigenPatente}"/>
                            </Label>
                            <ComboBox Name="_cbxOrigenPatente" Width="120" ItemsSource="{Binding}" DisplayMemberPath="Descripcion" >
                            </ComboBox>
                        </WrapPanel>

                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">
                            <Label Name="_lblSolicitud">
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblSolicitud}"/>
                            </Label>
                            <custom:ByTTextBox Name="_txtSolicitud" Width="150" MaxLength="40" Filtro="True" 
                                       GotFocus="_btnConsultarFocus" GotKeyboardFocus="_btnConsultarFocus" Text="{Binding Path=CodigoInscripcion}"/>

                        </WrapPanel>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">

                            <Label Name="_lblFecha">
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblFecha}"/>
                            </Label>


                            <custom:ByTDatePicker Editable="True" Name="_dpkFecha" Width="150"  Focusable="False" BorderBrush="{x:Null}" 
                                                  SelectedDateChanged="_dpkFecha_SelectedDateChanged">
                                <DatePicker.SelectedDate>
                                    <Binding Path="FechaInscripcion" UpdateSourceTrigger="PropertyChanged"/>
                                </DatePicker.SelectedDate>
                            </custom:ByTDatePicker>

                            <!--<custom:ByTTextBox Name="_dpkFecha" Width="150" MaxLength="40" Filtro="True" 
                                        Text="{Binding Path=FechaInscripcion}"/>-->
                        </WrapPanel>

                        <!--<DatePicker Name="_dpkFecha" Width="75" Focusable="False" BorderBrush="{x:Null}" SelectedDateChanged="_dpkFecha_SelectedDateChanged">
                                <DatePicker.SelectedDate>
                                    <Binding Path="FechaInscripcion" UpdateSourceTrigger="PropertyChanged"/>
                                </DatePicker.SelectedDate>
                            </DatePicker>-->

                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">
                            <Label Name="_lblPatente">
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblPatente}"/>
                            </Label>
                            <custom:ByTTextBox Name="_txtDescripcion" Text="{Binding Path=Descripcion}" Width="150" MaxLength="255"
                             GotFocus="_btnConsultarFocus" GotKeyboardFocus="_btnConsultarFocus"/>
                        </WrapPanel>
                        
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">
                        <Label>
                            <TextBlock Text="{x:Static recurso:Etiquetas.lblObservaciones}"/>
                        </Label>
                        <custom:ByTTextBox Name="_txtObservaciones" Text="" Width="150" MaxLength="255"
                             GotFocus="_btnConsultarFocus" GotKeyboardFocus="_btnConsultarFocus" CharacterCasing="Upper"/>
                    </WrapPanel>
                        
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,14,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="84"/>
                                    <ColumnDefinition Width="316"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Label Name="_lblAsociado" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left">
                                    <TextBlock Text="{x:Static recurso:Etiquetas.lblAsociado}"/>
                                </Label>
                                <Label Name="_lblIdAsociado" Visibility="Collapsed"  VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right">
                                    <TextBlock Text="{x:Static recurso:Etiquetas.lblId}"/>
                                </Label>
                                <custom:ByTTextBox BorderBrush="LightGreen" Name="_txtAsociado" Text="" Width="150" MaxLength="15" Grid.Row="0" Grid.Column="1" Height="25" HorizontalAlignment="Left"
                                 MouseDoubleClick="_txtAsociado_MouseDoubleClick" IsReadOnly="True"/>
                                <custom:ByTTextBox Visibility="Collapsed" Name="_txtIdAsociado" Text="" Width="150" MaxLength="15" Grid.Row="1" Grid.Column="1" Height="25" HorizontalAlignment="Left"
                                 GotFocus="_btnConsultarAsociadoFocus" GotKeyboardFocus="_btnConsultarAsociadoFocus" SoloNumero="True" Filtro="True" Margin="0,3" TamanoMaximo="8"/>

                                <Label Name="_lblNombreAsociado" Visibility="Collapsed"  VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right">
                                    <TextBlock Text="{x:Static recurso:Etiquetas.lblNombre}"/>
                                </Label>
                                <custom:ByTTextBox Visibility="Collapsed"  Name="_txtNombreAsociado" Text="" Width="150" MaxLength="255" Grid.Row="2" Grid.Column="1" Height="25" HorizontalAlignment="Left"
                                 GotFocus="_btnConsultarAsociadoFocus" GotKeyboardFocus="_btnConsultarAsociadoFocus" Margin="0,3" />

                                <Button Visibility="Collapsed"  Name="_btnConsultarAsociado" Width="100" IsDefault="False" Grid.Row="2" Grid.Column="1" Height="25" HorizontalAlignment="Right" Click="_btnConsultarAsociado_Click">
                                    <TextBlock Text="{x:Static recurso:Etiquetas.btnConsultar}"/>
                                </Button>
                                <!--Path=Id, Converter={StaticResource convertir}-->
                                <ListView Visibility="Collapsed"  Height="198" Name="_lstAsociados" ItemsSource="{Binding}" 
                      SelectionMode="Single" MouseDoubleClick="_lstAsociados_MouseDoubleClick"
                      Style="{DynamicResource EstiloListView}" Grid.Row="3" Grid.ColumnSpan="2">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Width="45">
                                                <GridViewColumnHeader Click="_Ordenar_Click" Tag="Id" Content="{x:Static recurso:Etiquetas.lsvId}"/>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock>
                                                <TextBlock.Text>
                                                    <Binding Path="Id" Converter="{StaticResource convertir}"/>
                                                </TextBlock.Text>
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=Nombre}" Width="250">
                                                <GridViewColumnHeader Click="_Ordenar_Click" Tag="Nombre" Content="{x:Static recurso:Etiquetas.lsvNombre}"/>
                                            </GridViewColumn>
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=Domicilio}" Width="250">
                                                <GridViewColumnHeader Click="_Ordenar_Click" Tag="Domicilio" Content="{x:Static recurso:Etiquetas.lsvDomicilio}"/>
                                            </GridViewColumn>
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=Pais.NombreEspanol}" Width="250">
                                                <GridViewColumnHeader Click="_Ordenar_Click" Tag="Pais.NombreEspanol" Content="{x:Static recurso:Etiquetas.lsvPais}"/>
                                            </GridViewColumn>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>
                        </WrapPanel>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,179,0">
                            <Label>
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblOrigenAsociado}"/>
                            </Label>
                            <ComboBox Name="_cbxOrigenAsociado" Width="120" ItemsSource="{Binding}" DisplayMemberPath="Descripcion" >
                            </ComboBox>
                        </WrapPanel>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,14,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="84"/>
                                    <ColumnDefinition Width="316"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Label Name="_lblInteresado" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Left">
                                    <TextBlock Text="{x:Static recurso:Etiquetas.lblInteresado}"/>
                                </Label>
                                <Label Name="_lblIdInteresado" Visibility="Collapsed" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right">
                                    <TextBlock Text="{x:Static recurso:Etiquetas.lblId}"/>
                                </Label>
                                <custom:ByTTextBox BorderBrush="LightGreen" Name="_txtInteresado" Text="" Width="150" MaxLength="15" Grid.Row="0" Grid.Column="1" Height="25" HorizontalAlignment="Left"
                                 MouseDoubleClick="_txtInteresado_MouseDoubleClick" IsReadOnly="True"/>

                                <custom:ByTTextBox Visibility="Collapsed"  Name="_txtIdInteresado" Text="" Width="150" MaxLength="15" Grid.Row="1" Grid.Column="1" Height="25" HorizontalAlignment="Left"
                                 GotFocus="_btnConsultarInteresadoFocus" GotKeyboardFocus="_btnConsultarInteresadoFocus" SoloNumero="True" Filtro="True" Margin="0,3" TamanoMaximo="8" />

                                <Label Name="_lblNombreInteresado" Visibility="Collapsed"  VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right">
                                    <TextBlock Text="{x:Static recurso:Etiquetas.lblNombre}"/>
                                </Label>
                                <custom:ByTTextBox Visibility="Collapsed"  Name="_txtNombreInteresado" Text="" Width="150" MaxLength="15" Grid.Row="2" Grid.Column="1" Height="25" HorizontalAlignment="Left"
                                 GotFocus="_btnConsultarInteresadoFocus" GotKeyboardFocus="_btnConsultarInteresadoFocus" Margin="0,3" />

                                <Button Visibility="Collapsed"  Name="_btnConsultarInteresado" Width="100" IsDefault="False" Grid.Row="2" Grid.Column="1" Height="25" HorizontalAlignment="Right" Click="_btnConsultarInteresado_Click">
                                    <TextBlock Text="{x:Static recurso:Etiquetas.btnConsultar}"/>
                                </Button>
                                <!--Path=Id, Converter={StaticResource convertir}-->
                                <ListView Visibility="Collapsed"  Height="198" Name="_lstInteresados" ItemsSource="{Binding}" 
                      SelectionMode="Single" MouseDoubleClick="_lstInteresados_MouseDoubleClick"
                      Style="{DynamicResource EstiloListView}" Grid.Row="3" Grid.ColumnSpan="2">
                                    <ListView.View>
                                        <GridView>
                                            <GridViewColumn Width="45">
                                                <GridViewColumnHeader Click="_Ordenar_Click" Tag="Id" Content="{x:Static recurso:Etiquetas.lsvId}"/>
                                                <GridViewColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock>
                                                <TextBlock.Text>
                                                    <Binding Path="Id" Converter="{StaticResource convertir}"/>
                                                </TextBlock.Text>
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </GridViewColumn.CellTemplate>
                                            </GridViewColumn>
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=Nombre}" Width="250">
                                                <GridViewColumnHeader Click="_Ordenar_Click" Tag="Nombre" Content="{x:Static recurso:Etiquetas.lsvNombre}"/>
                                            </GridViewColumn>
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=Ciudad}" Width="250">
                                                <GridViewColumnHeader Click="_Ordenar_Click" Tag="Ciudad" Content="{x:Static recurso:Etiquetas.lsvCiudad}"/>
                                            </GridViewColumn>
                                            <GridViewColumn DisplayMemberBinding="{Binding Path=Estado}" Width="250">
                                                <GridViewColumnHeader Click="_Ordenar_Click" Tag="Estado" Content="{x:Static recurso:Etiquetas.lsvEstado}"/>
                                            </GridViewColumn>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>
                        </WrapPanel>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,178,0">
                            <Label>
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblOrigenInteresado}"/>
                            </Label>
                            <ComboBox Name="_cbxOrigenInteresado" Width="110" ItemsSource="{Binding}" DisplayMemberPath="Descripcion" >
                            </ComboBox>
                        </WrapPanel>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">
                            <Label Name="_lblReferencia">
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblReferencia}"/>
                            </Label>
                            <custom:ByTTextBox Name="_txtPrimeraReferencia" Width="150" MaxLength="40" Filtro="True" 
                                       GotFocus="_btnConsultarFocus" GotKeyboardFocus="_btnConsultarFocus" Text="{Binding Path=PrimeraReferencia}"/>
                        </WrapPanel>


                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">
                            <Label VerticalAlignment="Center" HorizontalContentAlignment="Right">
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblSituacion}"/>
                            </Label>
                            <ComboBox Name="_cbxSituacion" Height="20" Width="150"
                              ItemsSource="{Binding}" DisplayMemberPath="Descripcion" SelectedIndex="0">
                            </ComboBox>
                        </WrapPanel>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">
                            <Label VerticalAlignment="Center" HorizontalContentAlignment="Right">
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblDetalle}"/>
                            </Label>
                            <ComboBox Width="150" Name="_cbxDetalleDatos" Height="20" 
                              ItemsSource="{Binding}" DisplayMemberPath="Descripcion" SelectedIndex="0">
                            </ComboBox>
                        </WrapPanel>
                        <!--Campos Internacionales-->















                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,180,0">
                            <Label Name="_lblCamposInternacionales">
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblCamposInternacionales}"/>
                            </Label>
                        </WrapPanel>
                        <!--<WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">
                            <Label  Name="_lblIdInternacional">
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblId}"/>
                            </Label>
                            <custom:ByTTextBox IsEnabled="false"  Name="_txtIdInternacional" Width="150" MaxLength="40" SoloNumero="True" Filtro="True" 
                                       GotFocus="_btnConsultarFocus" GotKeyboardFocus="_btnConsultarFocus" Text="{Binding Path=Id}" />
                        </WrapPanel>-->
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">
                            <Label  Name="_lblCodigoInternacional">
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblCodigoInt}"/>
                            </Label>
                            <custom:ByTTextBox  IsEnabled="false"  Name="_txtCodigoInternacional" Width="75" MaxLength="8"
                             GotFocus="_btnConsultarFocus" GotKeyboardFocus="_btnConsultarFocus" SoloNumero="True"/>
                            <custom:ByTTextBox  IsEnabled="false"  Name="_txtCodigoInternacional2" Width="75" MaxLength="8"
                             GotFocus="_btnConsultarFocus" GotKeyboardFocus="_btnConsultarFocus" SoloNumero="True"/>
                        </WrapPanel>

                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">
                            <Label  Name="_lblPaisInternacional" >
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblPais}"/>
                            </Label>
                            <ComboBox  IsEnabled="false"  Name="_cbxPaisInternacional" Width="150" ItemsSource="{Binding}" DisplayMemberPath="NombreEspanol" >
                            </ComboBox>
                        </WrapPanel>

                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">
                            <Label  Name="_lblReferenciaInteresado">
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblReferenciaInt}"/>
                            </Label>
                            <custom:ByTTextBox  IsEnabled="false"  Name="_txtReferenciaInteresado" Width="150" MaxLength="40"
                             GotFocus="_btnConsultarFocus" GotKeyboardFocus="_btnConsultarFocus"/>
                        </WrapPanel>

                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">
                            <Label  Name="_lblReferenciaAsociado">
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblReferenciaAsoc}"/>
                            </Label>
                            <custom:ByTTextBox   IsEnabled="false" Name="_txtReferenciaAsociado" Width="150" MaxLength="40"
                             GotFocus="_btnConsultarFocus" GotKeyboardFocus="_btnConsultarFocus"/>
                        </WrapPanel>













                        <!--Campos Internacionales-->
                    </StackPanel>

                    <Separator Margin="0,5,0,5"/>

                    <CheckBox IsEnabled="True" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="7" Content="{x:Static recurso:Etiquetas.chkBoletines}" 
                                  Height="16" HorizontalAlignment="Left" Margin="5,0,0,0" Name="_chkBoletines"
                                  VerticalAlignment="Center" Click="_chkBoletines_Click"/>
                    <StackPanel Name="_boletines" Visibility="Collapsed">

                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">
                            <Label VerticalAlignment="Center" HorizontalContentAlignment="Right">
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblOrdPublicacion}"/>
                            </Label>
                            <ComboBox Name="_cbxBolOrdPublicacion" Height="20" Width="150"
                              ItemsSource="{Binding}" SelectedIndex="0">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource convertirADosValores}">
                                        <Binding Path="Id" />
                                        <Binding Path="FechaBoletin" />
                                    </MultiBinding>
                                </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </WrapPanel>

                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">
                            <Label VerticalAlignment="Center" HorizontalContentAlignment="Right">
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblBolPublicacion}"/>
                            </Label>
                            <ComboBox Name="_cbxBolPublicacion" Height="20" Width="150"
                              ItemsSource="{Binding}" SelectedIndex="0">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource convertirADosValores}">
                                        <Binding Path="Id" />
                                        <Binding Path="FechaBoletin" />
                                    </MultiBinding>
                                </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </WrapPanel>

                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">
                            <Label VerticalAlignment="Center" HorizontalContentAlignment="Right">
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblBolConcesion}"/>
                            </Label>
                            <ComboBox Name="_cbxBolConcesion" Height="20" Width="150"
                              ItemsSource="{Binding}" SelectedIndex="0">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource convertirADosValores}">
                                        <Binding Path="Id" />
                                        <Binding Path="FechaBoletin" />
                                    </MultiBinding>
                                </TextBlock.Text>
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </WrapPanel>
                    </StackPanel>



                    <Separator Margin="0,5,0,5"/>
                    <CheckBox IsEnabled="True" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="7" Content="{x:Static recurso:Etiquetas.chkPrioridades}" 
                                  Height="16" HorizontalAlignment="Left" Margin="5,0,0,0" Name="_chkPrioridad"
                                  VerticalAlignment="Center" Click="_chkPrioridad_Click"/>
                    <StackPanel Name="_prioridad" Visibility="Collapsed">
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">
                            <Label>
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblCodigo}"/>
                            </Label>
                            <custom:ByTTextBox Name="_txtPrioridadCodigo" Width="150" MaxLength="15" Filtro="True" 
                                       GotFocus="_btnConsultarFocus" GotKeyboardFocus="_btnConsultarFocus"/>
                        </WrapPanel>

                        <!--<WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">

                            <Label Name="_lblFechaPrioridad">
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblFecha}"/>
                            </Label>


                            <custom:ByTTextBox Name="_dpkPrioridadFecha" Width="150" MaxLength="40" Filtro="True" 
                                        Text="{Binding Path=FechaPrioridad}"/>
                        </WrapPanel>-->

                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">

                            <Label>
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblFecha}"/>
                            </Label>
                            <custom:ByTDatePicker Editable="True" Name="_dpkPrioridadFecha" Width="150"  Focusable="False" BorderBrush="{x:Null}" 
                                                  SelectedDateChanged="_dpkFecha_SelectedDateChanged">
                                <DatePicker.SelectedDate>
                                    <Binding Path="Fecha" UpdateSourceTrigger="PropertyChanged"/>
                                </DatePicker.SelectedDate>
                            </custom:ByTDatePicker>
                        </WrapPanel>

                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">
                            <Label>
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblPais}"/>
                            </Label>
                            <ComboBox Name="_cbxPrioridadPais" Width="150" ItemsSource="{Binding}" DisplayMemberPath="NombreEspanol" >
                            </ComboBox>
                        </WrapPanel>
                    </StackPanel>
                    <Separator Margin="0,5,0,5"/>
                    <!-- Nueva parte para hacer la consulta por traspasos y renovaciones de patentes -->
                    
                    <CheckBox IsEnabled="True" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="7" Content="{x:Static recurso:Etiquetas.chkTYR}" Height="16" HorizontalAlignment="Left" Margin="5,0,0,0" Name="_chkTYR" VerticalAlignment="Center" Click="_chkTYR_Click"/>
                    
                    <StackPanel Name="_TYR" Visibility="Collapsed">

                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">
                            <Label Name="_lblRegistroTYR">
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblRegistro}"/>
                            </Label>
                            <custom:ByTTextBox Name="_txtRegistroTYR" Width="150" MaxLength="40" Filtro="True" 
                                       GotFocus="_btnConsultarFocus" GotKeyboardFocus="_btnConsultarFocus" Text="{Binding Path=CodigoRegistro}" />
                        </WrapPanel>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">

                            <Label Name="_lblFechaTYR">
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblFecha}"/>
                            </Label>

                            <custom:ByTDatePicker Editable="True" Name="_dpkFechaTYR" Width="150"  Focusable="False" BorderBrush="{x:Null}" 
                                                  SelectedDateChanged="_dpkFecha_SelectedDateChanged">
                                <DatePicker.SelectedDate>
                                    <Binding Path="FechaRegistro" UpdateSourceTrigger="PropertyChanged"/>
                                </DatePicker.SelectedDate>
                            </custom:ByTDatePicker>
                            
                            
                            
                        </WrapPanel>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,180,0">
                            <Label Name="_lblExpCambioPend">
                                <TextBlock Text="{x:Static recurso:Etiquetas.lblExpCambioPend}"/>
                            </Label>
                            <custom:ByTTextBox Name="_txtCambioPendiente" Width="150" MaxLength="50" SoloNumero="False" Filtro="True" 
                                               GotFocus="_btnConsultarFocus" GotKeyboardFocus="_btnConsultarFocus" 
                                               Text="{Binding Path=ExpCambioPendiente}" />
                        </WrapPanel>
                        

                    </StackPanel>

                    <Separator Margin="0,5,0,5"/>
                    <!-- Fin de Nueva parte para hacer la consulta por traspasos y renovaciones de patentes -->
                    <Button Name="_btnConsultar" Width="100" IsDefault="True" Click="_btnConsultar_Click">
                        <TextBlock Text="{x:Static recurso:Etiquetas.btnConsultar}"/>
                    </Button>
                    <Separator Margin="0,5,0,5"/>
                </StackPanel>
            </GroupBox>
        </ScrollViewer>









        <!--Resultados-->
        <GroupBox Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" Margin="5">
            <ListView Name="_lstResultados" ItemsSource="{Binding}" 
                      MouseDoubleClick="_lstResultados_MouseDoubleClick" SelectionMode="Single"
                      Style="{DynamicResource EstiloListView}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=Id}" Width="120">
                            <GridViewColumnHeader Click="_Ordenar_Click" Tag="Id" Content="{x:Static recurso:Etiquetas.lsvId}"/>
                        </GridViewColumn>
                        

                        <GridViewColumn DisplayMemberBinding="{Binding Path=CodigoInscripcion}" Width="120">
                            <GridViewColumnHeader Click="_Ordenar_Click" Tag="CodigoInscripcion" Content="{x:Static recurso:Etiquetas.lsvSolicitud}"/>
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=PrimeraReferencia}" Width="120">
                            <GridViewColumnHeader Click="_Ordenar_Click" Tag="PrimeraReferencia" Content="{x:Static recurso:Etiquetas.lsvReferencia}"/>
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=Servicio.Descripcion}" Width="150">
                            <GridViewColumnHeader Click="_Ordenar_Click" Tag="Servicio.Descripcion" Content="{x:Static recurso:Etiquetas.lsvSituacion}"/>
                        </GridViewColumn>

                        <GridViewColumn DisplayMemberBinding="{Binding Path=Asociado.Id}" Width="150">
                            <GridViewColumnHeader Click="_Ordenar_Click" Tag="Asociado.Id" Content="{x:Static recurso:Etiquetas.lsvCodigoAsociado}"/>
                        </GridViewColumn>

                        <GridViewColumn DisplayMemberBinding="{Binding Path=Asociado.Nombre}" Width="250">
                            <GridViewColumnHeader Click="_Ordenar_Click" Tag="Asociado.Nombre" Content="{x:Static recurso:Etiquetas.lsvAsociado}"/>
                        </GridViewColumn>

                        <GridViewColumn DisplayMemberBinding="{Binding Path=Interesado.Id}" Width="150">
                            <GridViewColumnHeader Click="_Ordenar_Click" Tag="Interesado.Id" Content="{x:Static recurso:Etiquetas.lsvCodigoInteresado}"/>
                        </GridViewColumn>

                        <GridViewColumn DisplayMemberBinding="{Binding Path=Interesado.Nombre}" Width="250">
                            <GridViewColumnHeader Click="_Ordenar_Click" Tag="Interesado.Nombre" Content="{x:Static recurso:Etiquetas.lsvInteresado}"/>
                        </GridViewColumn>

                        <GridViewColumn DisplayMemberBinding="{Binding Path=FechaInscripcion, StringFormat=dd/MM/yyyy}" Width="180">

                            <GridViewColumnHeader Click="_Ordenar_Click" Tag="FechaInscripcion" Content="{x:Static recurso:Etiquetas.lsvFechaInscripcion}"/>
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=CodigoPatenteInternacional}" Width="120">
                            <GridViewColumnHeader Click="_Ordenar_Click" Tag="CodigoPatenteInternacional" Content="{x:Static recurso:Etiquetas.lsvCodigoInternacional}"/>
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=CorrelativoExpediente}" Width="120">
                            <GridViewColumnHeader Click="_Ordenar_Click" Tag="CorrelativoExpediente" Content="{x:Static recurso:Etiquetas.lsvCorrelativoExpediente}"/>
                        </GridViewColumn>
                        
                    </GridView>
                </ListView.View>
            </ListView>
            <!--<DataGrid Name="_dataGridResultados" ItemsSource="{Binding}">  StringFormat="{}{0:dd/MM/yyyy}
                <DataGrid.Columns>
                    <DataGridHyperlinkColumn Header="Nombre Completo" 
                        Binding="{Binding Path=NombreCompleto, ValidatesOnExceptions=True}">
                    </DataGridHyperlinkColumn>
                    <DataGridTextColumn Header="Email" 
                        Binding="{Binding Path=Email, ValidatesOnExceptions=True}">
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>-->
        </GroupBox>

        <Button Name="_btnLimpiarCampos" Grid.Column="1" Grid.Row="1" Margin="5" Width="100" HorizontalAlignment="Left" Click="_btnLimpiarCampos_Click">
            <TextBlock Text="{x:Static recurso:Etiquetas.btnLimpiarCampos}"/>
        </Button>
        <!--Botones Aceptar|Cancelar-->
        <GroupBox Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" BorderBrush="{x:Null}">
            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Orientation="Horizontal">
                <Button Name="_btnCancelar" Width="100" Click="_btnCancelar_Click">
                    <TextBlock Text="{x:Static recurso:Etiquetas.btnCancelar}"/>
                </Button>
            </StackPanel>
        </GroupBox>

    </Grid>
</Page>
